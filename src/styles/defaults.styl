// Normalize
*
	margin     0
	padding    0
	border     0
	outline    0
	box-shadow none
	background none
	box-sizing border-box
	appearance none

// Page
html,
body,
#svelte
	width  100%
	height 100%

html
	&::-webkit-scrollbar
		width            $WidthScrollbar
		background-color $ColorBGLight
	&::-webkit-scrollbar-track
		background-color $ColorBGLight
	&::-webkit-scrollbar-thumb
		background-color $ColorBorder
		border-radius    $Radius
		border           $SpacingSmall solid $ColorBGLight
		transition       background-color $TimeTrans
		&:hover
			background-color $ColorAccentTranslucent
		&:active
			background-color $ColorAccent
	&::-webkit-scrollbar-button

		&:single-button:vertical
			height           $WidthScrollbar
			border           $SpacingSmall solid $ColorBGLight
			background-color $ColorBorder
			border-radius    $Radius
			transition       background-color $TimeTrans

			&:hover
				background-color $ColorAccentTranslucent

			&:active
				background-color $ColorAccent
			&:decrement,
			&:increment
				//

